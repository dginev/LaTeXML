package LaTeXML::Package::Pool;
use strict;
use warnings;
use LaTeXML::Package;
use LaTeXML::Util::Pathname;

## Mostly because this loads packages which are then expected!
## ???
RequirePackage('ifthen');
RequirePackage('xkeyval');
RequirePackage('xcolor');
RequirePackage('tikz');
#usetikzlibrary{positioning}
RequirePackage('calc');

DeclareOption('disable', sub {
    DefMacro('\todo[]{}', '', locked => 1);
    RawTeX('\@todonotes@disabledtrue');
});

DefMacroI('\ext@todo', undef, 'todo');
NewCounter('todo');
DefMacro('\todotyperefname',   'ToDo');
DefMacro('\todo',              '\lx@note{todo}');
DefMacro('\missingfigure[]{}', '[Missing Figure: #2]');
DefMacro('\todototoc',         '');
DefMacro('\listoftodos',       '');
DefMacro('\@todo[]{}',         '');
DefMacro('\setuptodonotes{}',  '');

DefMacro('\@todonotes@backgroundcolor', 'orange');
DefMacro('\@todonotes@textcolor',       'black');
DefMacro('\@todonotes@linecolor',       'orange');
DefMacro('\@todonotes@bordercolor',     'black');
DefMacro('\@todonotes@tickmarkheight',  'unused value');
DefMacro('\@todonotes@textwidth',       '\marginparwidth');
DefMacro('\@todonotes@textsize',        '\normalsize');
DefMacro('\@todonotes@figwidth',        '\linewidth');
DefMacro('\@todonotes@figheight',       '4cm');
DefMacro('\@todonotes@figcolor',        'black!40');

DefConditional('\if@todonotes@reverseMissingFigureTriangle');
DefConditional('\if@todonotes@obeyDraft');
DefConditional('\if@todonotes@isDraft');
DefConditional('\if@todonotes@obeyFinal');
DefConditional('\if@todonotes@isFinal');
DefConditional('\if@todonotes@disabled');
DefConditional('\if@todonotes@colorinlistoftodos');
