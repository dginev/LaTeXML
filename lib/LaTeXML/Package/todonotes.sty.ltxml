DefConditional('\if@todonotes@shadowlibraryloaded');
DefConditional('\if@todonotes@useshadow');
DefConditional('\if@todonotes@localdisable');
DefConditional('\if@todonotes@appendtolistoftodos');
DefConditional('\if@todonotes@inlinenote');
DefConditional('\if@todonotes@prependcaption');
DefConditional('\if@todonotes@line');
DefConditional('\if@todonotes@fancyline');
DefConditional('\if@todonotes@authorgiven');
DefConditional('\if@todonotes@captiongiven');
DefConditional('\if@todonotes@inlinepar');
DefConditional('\if@todonotes@vmode');

ProcessOptions();

